<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    tools:context="rtrk.pnrs1.ra198_2013.taskmanager.Add_Task_Activity">
    <!-- For backgroud image : "https://i.stack.imgur.com/cjXKj.png"-->

    <LinearLayout
        android:id="@+id/FirstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/NameOfTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="@string/NameOfTask"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/in_date"
                android:layout_below="@+id/NameOfTask"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="35dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/in_time"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/data"
                android:id="@+id/datePickerBtn"
                android:layout_weight="2"
                android:src="@drawable/date"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/time"
                android:id="@+id/timePickerBtn"
                android:layout_weight="2"
                android:src="@drawable/clock"/>
        </LinearLayout>


        <EditText
            android:id="@+id/Discription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/Discription"
            android:layout_below="@+id/Timer"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"
            android:inputType="textMultiLine"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/box"
            android:layout_below="@+id/Discription"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ColorButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/SecondLayout"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/RedButton"
                android:radius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Checker"
                android:layout_weight="3"
                android:background="@color/ColorForRedButton"/>
            <Button
                android:id="@+id/YellowButton"
                android:radius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Checker"
                android:layout_weight="3"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/ColorForYellowButton"/>
            <Button
                android:id="@+id/GreenButton"
                android:radius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Checker"
                android:layout_weight="3"
                android:background="@color/ColorForGreenButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp">
            <!-- Dugmad sam pravio na sajtu "http://angrytools.com/android/button/"-->
            <ImageView
                android:id="@+id/AddingButton"
                android:text="@string/AddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/adding"/>
            <ImageView
                android:id="@+id/QuitButton"
                android:text="@string/Quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
